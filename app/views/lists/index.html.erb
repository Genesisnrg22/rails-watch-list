<!-- app/views/list/index.html.erb -->
<div class="banner b-index d-flex align-items-center">
  <div class="container">
    <h1>Movies watch-list!</h1>
    <p>Watch the best movies here</p>
  </div>
</div>
<div class="container">
  <div class="lists d-flex justify-content-between mt-4 p-3">
    <div>
      <strong>My Lists</strong>
    </div>
    <div class="">
      <%= link_to new_list_path do %>
        <button class="btn btn-dark">Add a new list</button>
      <% end %>
    </div>
  </div>
  <div class="d-flex">
    <% @lists.each do |list| %>
      <div class="card ms-3">
        <%= link_to list_path(list) do%>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <%= list.name %>
          </div>
        <% end %>
        <%= link_to "Delete",
          list_path(list),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    <% end %>
  </div>

</div>
